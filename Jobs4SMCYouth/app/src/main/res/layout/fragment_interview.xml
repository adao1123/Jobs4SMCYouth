<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_marginTop="@dimen/nested_scrollview_top_margin"
    tools:context=".Fragments.InterviewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/interview_before_card_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_view_layout_margin"
            card_view:cardCornerRadius="@dimen/cardview_default_radius"
            card_view:cardUseCompatPadding="false"
            android:clickable="true"
            card_view:cardBackgroundColor="@color/card_view_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="@dimen/standard_linear_layout_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/title_text"
                    android:text="Before the Job Interview"
                    android:textColor="@color/card_view_title"/>

                <TextView
                    android:id="@+id/interview_before_detail_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin_details_text_expanding_card_view"
                    android:textSize="@dimen/body_text"
                    android:text="@string/interview_before"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/interview_during_card_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_view_layout_margin"
            card_view:cardCornerRadius="@dimen/cardview_default_radius"
            card_view:cardUseCompatPadding="false"
            android:clickable="true"
            card_view:cardBackgroundColor="@color/card_view_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="@dimen/standard_linear_layout_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/title_text"
                    android:text="During the Job Interview"
                    android:textColor="@color/card_view_title"/>

                <TextView
                    android:id="@+id/interview_during_detail_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin_details_text_expanding_card_view"
                    android:textSize="@dimen/body_text"
                    android:text="@string/interview_during"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/interview_after_card_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_view_layout_margin"
            card_view:cardCornerRadius="@dimen/cardview_default_radius"
            card_view:cardUseCompatPadding="false"
            android:clickable="true"
            card_view:cardBackgroundColor="@color/card_view_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="@dimen/standard_linear_layout_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/title_text"
                    android:text="After the Job Interview"
                    android:textColor="@color/card_view_title"/>

                <TextView
                    android:id="@+id/interview_after_detail_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margin_details_text_expanding_card_view"
                    android:textSize="@dimen/body_text"
                    android:text="@string/interview_after"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
