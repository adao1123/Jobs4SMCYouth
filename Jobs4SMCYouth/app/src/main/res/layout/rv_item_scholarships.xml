<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="false"
    card_view:contentPaddingTop="10dp"
    card_view:contentPaddingBottom="10dp"
    card_view:contentPaddingRight="10dp"
    card_view:contentPaddingLeft="10dp"
    card_view:cardBackgroundColor="@color/card_view_background"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/scholarship_listing"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/scholarship_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            card_view:riv_corner_radius="10dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            android:src="@drawable/icon_scholarship"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/scholarship_icon_top"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                card_view:riv_corner_radius="10dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:visibility="gone"
                android:src="@drawable/icon_scholarship"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/scholarship_title_view"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/scholarship_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title: "
                    android:textColor="@color/card_view_title"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:gravity="left"/>
                <TextView
                    android:id="@+id/scholarship_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/title_text"
                    android:textColor="@color/card_view_title"
                    android:textStyle="bold"
                    android:gravity="left"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scholarship_contact_view"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/card_view_title"
                    android:text="Contact: "
                    android:textStyle="bold"
                    android:gravity="left"/>
                <TextView
                    android:id="@+id/scholarship_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scholarship_address_view"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location: "
                    android:textColor="@color/card_view_title"
                    android:textStyle="bold"
                    android:gravity="left"/>
                <TextView
                    android:id="@+id/scholarship_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scholarship_email_view"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Address: "
                    android:textColor="@color/card_view_title"
                    android:textStyle="bold"
                    android:gravity="left"/>
                <TextView
                    android:id="@+id/scholarship_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/scholarship_switch_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/scholarship_deadline_view"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/scholarship_deadline_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Due: "
                        android:gravity="left"/>
                    <TextView
                        android:id="@+id/scholarship_deadline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:id="@+id/scholarship_max_view"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/scholarship_max_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="Maximum Amount: "
                        android:textColor="@color/card_view_title"
                        android:textStyle="bold"
                        android:gravity="left"/>
                    <TextView
                        android:id="@+id/scholarship_max"
                        android:layout_width="match_parent"
                        android:gravity="left"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scholarship_number_view"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/card_view_title"
                    android:text="Number Of Awards: "
                    android:textStyle="bold"
                    android:gravity="left"/>
                <TextView
                    android:id="@+id/scholarship_number"
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scholarship_description_view"
                android:visibility="gone"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/card_view_title"
                    android:layout_height="wrap_content"
                    android:text="Description: "
                    android:textStyle="bold"
                    android:gravity="left"/>
                <TextView
                    android:id="@+id/scholarship_description"
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>