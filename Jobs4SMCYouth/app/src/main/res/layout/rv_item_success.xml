<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    card_view:cardBackgroundColor="@color/card_view_background"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="false"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/standard_linear_layout_padding">

        <TextView
            android:visibility="gone"
            android:layout_margin="5dp"
            android:id="@+id/rv_item_success_name"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_height="wrap_content"/>

        <com.github.ivbaranov.mli.MaterialLetterIcon
            android:id="@+id/success_letter"
            android:layout_gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            card_view:mli_letter_color="@color/primary_light"
            card_view:mli_shape_color="@color/accent"
            card_view:mli_letter="S"
            card_view:mli_letter_size="50"
            app:mli_shape_type="circle"/>

        <ImageView
            android:visibility="gone"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_success"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"/>

        <com.smc.jobs4smcyouth.Utilities.ExpandableTextView
            android:layout_margin="5dp"
            android:id="@+id/rv_item_success_story"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/body_text"/>

    </LinearLayout>

</android.support.v7.widget.CardView>