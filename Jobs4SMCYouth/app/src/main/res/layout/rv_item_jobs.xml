<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="false"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/jobs_listing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rv_item_jobs_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            android:src="@drawable/icon_jobpost"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/jobs_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/jobs_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title: "
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/rv_item_jobs_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="left"/>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/jobs_city_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location: "
                    android:textStyle="bold"
                    android:gravity="left"/>


                <TextView
                    android:id="@+id/rv_item_jobs_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/jobs_payrate_view"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pay Rate: "
                    android:textStyle="bold"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/rv_item_jobs_payrate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/jobs_age_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age: "
                    android:textStyle="bold"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/rv_item_jobs_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"/>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/jobs_duties_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duties: "
                    android:textStyle="bold"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/rv_item_jobs_duties"
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>




</android.support.v7.widget.CardView>